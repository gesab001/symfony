<form method="post" action="{{ path('books_delete', {'bookid': book.bookid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.bookid) }}">
    <button class="btn">Delete</button>
</form>
