{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
    <h1>Books</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Bookid</th>
                <td>{{ book.bookid }}</td>
            </tr>
            <tr>
                <th>Book</th>
                <td>{{ book.book }}</td>
            </tr>
            <tr>
                <th>Chapters</th>
                <td>{{ book.chapters }}</td>
            </tr>
            <tr>
                <th>Verses</th>
                <td>{{ book.verses }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ book.startdate ? book.startdate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('books_index') }}">back to list</a>

    <a href="{{ path('books_edit', {'bookid': book.bookid}) }}">edit</a>

    {{ include('books/_delete_form.html.twig') }}
{% endblock %}
