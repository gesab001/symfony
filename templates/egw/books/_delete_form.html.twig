<form method="post" action="{{ path('egw_books_delete', {'bookcode': book.bookcode}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.bookcode) }}">
    <button class="btn">Delete</button>
</form>
