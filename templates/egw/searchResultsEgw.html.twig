{% extends 'base.html.twig' %}


        {% block body %}
            <p>Total verses found: {{results.getTotalItemCount}}</p>
                <div class="navigation">
                        {{ knp_pagination_render(results) }}
                </div>


            <ol>
            {% for result in results %}

                <li>{{ result.WORD }} <a href="{{ path('egw_read_chapter', {'book': result.BOOKCODE, 'page': result.PAGE}) }}">({{ result.BOOKCODE }} {{ result.PAGE }}.{{ result.PARAGRAPH }})</a> </li>
                    {#(<a href="{{ path('egw_read_chapter', {'book': result.BOOKCODE, 'page': result.PAGE}) }}">{{ result.BOOK }} {{ result.PAGE }}:{{ result.PARAGRAPH }})</a></li>#}

            {%  endfor %}
            </ol>






        {% endblock %}

{% block javascripts %}
        {{ parent() }}
        <script src="{{  asset('js/hymn_show.js') }}"></script>
{%  endblock %}