{% block title %}Videos{% endblock %}

{% block body %}
    <h1>Videos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ video.url }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ video.thumbnail }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ video.filename }}</td>
            </tr>
            <tr>
                <th>Preacher</th>
                <td>{{ video.Preacher }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ video.views }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('videos_index') }}">back to list</a>

